{{!--HBS para filtrar datos y mostrarlos con Chartjs--}}

<link href="/CSS/empleados.css" rel="stylesheet" type="text/css">

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header bg-info">
                    <h3 class="text-light">FILTRAR DATOS</h3>
                </div>
                <div class="card-body ">
                    <form action="/chartjs" method="post">
                        <div class="form-group">                     
                            
                            <p class="text-primary">Fecha_Inicial</p>
                                <input type="Date" name="date_1" class="form-control"  aria-label="date1">
                            
                            <p class="text-primary">Hora inicio</p>
                                <input type="time" name="time_1" class="form-control" aria-label="time_1" value="06:00"/>

                            <p class="text-primary">Fecha_Final</p>
                                <input type="Date" name="date_2" class="form-control" aria-label="date_2" >

                            <p class="text-primary"> Hora fin</p>
                                <input type="time" name="time_2" class="form-control" aria-label="time_2" value="16:30"/>
                            <br>

                            <div class="form-group">
                                <button class="btn btn-success btn-block bg-info"> FILTRAR</button>
                            </div>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>