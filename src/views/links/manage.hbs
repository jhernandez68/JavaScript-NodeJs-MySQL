{{!--hbs para gestión de usuarios --}}

{{!--Letreto principal--}}
<h1 class="text-center">Gestión de Usuarios </h1>

    {{!-- Script - Borrar usuario --}}
    <script type="text/javascript">
        function confirmation(){
            if(confirm("¿Está seguro de BORRAR el usuario?")){
                return true;
            } else {
                return false;
                }
        }
    </script>
           
{{!--Tabla con información de usuarios--}}
<div class="container-fluid text-center">
    <table class="table table table-bordered table-light table-striped table-hover">
        {{!--Cabecera de la tabla--}}
        <thead class="bg-dark text-light">
            <tr>
                <th scope="col">
                    <div class="dropdown">
                        <a class="dropdown-toggle btn text-light" data-toggle="dropdown" href="#" >ID</a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <li><a class="btn" href="/manage/asc"> ID | Ascendente</a></li>
                                <li><a class ="btn" href="/manage/desc"> ID | Descendente</a></li>
                            </ul>
                    </div> 
                </th>

                <th scope="col">
                    <div class="dropdown">
                        <a class="dropdown-toggle btn text-light" data-toggle="dropdown" href="#" > Usuario</a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <li><a class="btn" href="/manage/nameasc"> Nombre | Ascendente</a></li>
                                <li><a class ="btn" href="/manage/namedesc"> Nombre | Descendente</a></li>
                            </ul>
                    </div> 
                </th>

                <th scope="col">
                    <div class="dropdown">
                        <a class="dropdown-toggle btn text-light" data-toggle="dropdown" href="#">Fullname</a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a class="btn" href="/manage/fullnameasc"> Fullname | Ascendente</a></li>
                            <li><a class="btn" href="/manage/fullnamedesc"> Fullname | Descendente</a></li>
                        </ul>
                    </div>
                </th>

                <th scope="col">
                    <div class="dropdown">
                        <a class="dropdown-toggle btn text-light" data-toggle="dropdown" href="#">Rol</a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a class="btn" href="/manage/rolasc"> ROL | Ascendente</a></li>
                            <li><a class="btn" href="/manage/roldesc"> ROL | Descendente</a></li>
                        </ul>
                    </div>
                </th>

                <th scope="col">
                    <div class="dropdown">
                        <a class="dropdown-toggle btn text-light" data-toggle="dropdown" href="#">GESTIONAR - EDITAR | ELIMINAR</a>
                    </div>
                </th>
            </tr>

            {{!--Form e input para buscar usuario por nombre--}}
            <form action="/searchUser" method="post">
                <div class="input-group">
                    <input type="search" class="form-control rounded" placeholder="Buscar usuario por nombre" aria-label="Search" aria-describedby="search-addon"  name="Search"/>
                    <button class="btn btn-danger text-center mr-1" >
                        Buscar
                    </button>
                </div>
            </form>

        </thead>

        {{!--Ciclo para mostrar usuarios instanciados en el arreglo 'usuarios'--}}
        {{#each usuarios}}
            <tbody>
                <tr>
                    <td>{{id}}</td>
                    <td>{{username}}</td>
                    <td>{{fullname}}</td>
                    <td>{{rol}}</td>
                    <td>
                        <div class="container-fluid text-center row justify-content-center"> 
                        {{!--Botón para editar usuario--}}    
                        <form action="/editUser/{{id}}" method="get">
                            <button class="btn btn-info mr-1"> EDITAR
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 
                                        .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 
                                        .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 
                                        12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                </svg>
                            </button>
                        </form>

                        {{!--Botón para eliminar usuario--}}
                        <form action="deleteUser/{{id}}" onsubmit="return confirmation()">
                            <button class="btn btn-danger mr-1"> ELIMINAR
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 
                                        8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                            </button>
                        </form>
                        </div>
                    </td>
                </tr>
            </tbody>
        {{/each}}
    
    </table>
</div>