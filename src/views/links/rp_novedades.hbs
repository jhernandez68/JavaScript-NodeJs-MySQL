<link href="/CSS/style.css" rel="stylesheet" type="text/css">
<div class="container-fluid text-center" >
    {{!--table-hover: Propiedad para marcar cada row--}}
    <table class="table table-bordered table-striped table-hover">

        {{!-- Container botones principales --}}
        <div class="container-fluid text-center row justify-content-start ">

            <form action="/rp_novedades/rp_filter2" method="get">
                <button class="btn btn-danger text-center mr-1" >
                    Filtrar datos por Fechas y área
                    {{!--Icono de !--}}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
                    </svg>
                    </button>
            </form>
            
            {{!--Botón para exportar datos en la db a csv--}}
            <form action="/rp_novedades/downloadcsv" method="get">
            <button class="btn btn-success text-center-m1" >
                Descargar CSV
                {{!--Icono guardar--}}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
                </svg>
                </button>
            </form>

            <form action="/searchrp" method="post" >
                <div class="input-group">
                    <input type="search" class="form-control rounded" placeholder="Buscar según orden de Trabajo" aria-label="Search" aria-describedby="search-addon"  name="Search"/>
                    <button class="btn btn-danger text-center mr-1" >
                        Buscar 
                    </button>
                </div>
            </form>
        </div>

        <thead class="thead-dark">
        {{!--Cabecera de la tabla--}}
            <tr>
                <th>Orden</th>
                <th>Fecha</th>
                <th>Descripción</th>
                <th>Área</th>
                <th>Tiempo</th>
            </tr>
        </thead>
        
        {{!-- Ciclo para cada uno de los datos de la tabla productividad --}}
        {{#each rp_novedades}}

        {{!-- Se lista dinamicamente cada uno de los campos del arreglo 'productividad' --}}
            <tbody>
            {{!--Contenido de la tabla--}}
                <tr>
                    <td>{{orden}}</td>
                    <td>{{fecha}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{area}}</td>
                    <td>{{tiempo}}</td>
                </tr>
            </tbody>
        {{/each}}
    </table>
</div>