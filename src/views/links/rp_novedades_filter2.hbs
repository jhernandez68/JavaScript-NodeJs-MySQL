{{!--HBS para filtrar Ordenes de rp_novedades por Fecha Inicial y área--}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header bg-info">
                    <h3 class="text-light">FILTRAR DATOS de novedades</h3>
                </div>
                <div class="card-body ">
                    <form action="/rp_novedades/exportexcel3" method="post">
                        <div class="form-group">                     
                            <p class="text-primary">Fecha Inicio</p>
                                <input type="Date" name="date_1" class="form-control"  aria-label="date1">
                            <p class="text-primary">Fecha Fin</p>
                                <input type="Date" name="date_2" class="form-control"  aria-label="date2">                                  
                            <p class="text-primary">Área</p>
                                <div class="input-group mb-3">
                                    <select class="custom-select" name="area">
                                        <option value="acolchado">Acolchado</option>
                                        <option value="almohada">Almohada</option>
                                        <option value="corte">Corte</option>
                                        <option value="confeccion">Confección</option>
                                        <option value="empaque">Empaque</option>
                                    </select>
                                </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block bg-info"> FILTRAR</button>
                            </div>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>