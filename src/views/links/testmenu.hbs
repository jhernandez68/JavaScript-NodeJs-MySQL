{{!--hbs para gestión de empleados --}}
<link href="/CSS/style.css" rel="stylesheet" type="text/css">

<br>
{{!-- Script - Borrar usuario --}}
<script type="text/javascript">
    function confirmation(){
        if(confirm("¿Está seguro de BORRAR el usuario?")){
                return true;
            } else {
                return false;
                }
        }
    </script>

<div class="wrapper">
    {{!--Card para ordenes, solo permite leer datos--}}
    <div class="card text-center">
        <div class="card-header bg-info">
            <h3 class="text-light">Ordenes</h3>
        </div>
        <div class="card-body">        
            <div class="form-group">                
                <form action="/addMainOT" method="/get">
                    <button class="btn btn-success btn-block" >
                        Añadir orden
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{{!--Se trae la información del usuario a editar--}}
<div class="container-fluid text-center">
    <table class="table table-bordered table-striped table-hover">
        <div class="container-fluid text-center row justify-content-start ">

        </div>
        {{!--Cabecera de la tabla--}}
        <thead class="thead-dark">
            <tr>
                <th>Orden</th>
                <th>Parte</th>
                <th>Desc</th>
                <th>Programadas</th>
                <th>T_Est</th>
                <th>Destino</th>
                <th>Modulo</th>
                <th>Operario</th>
                <th>Ruta</th>
                <th>F_ini</th>
                <th>H_ini</th>
                <th>F_fin</th>
                <th>H_fin</th>
                <th>t_total</th>
                <th>Primera</th>
                <th>Segunda</th>
                <th>Comentario</th>
                <th>Rendimiento</th>
            </tr>
        </thead>

        {{!--Ciclo para mostrar usuarios instanciados en el arreglo 'usuarios'--}}
        {{#each orden}}
            <tbody>
                <tr>
                    <td>{{id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{area}}</td>
                    <td>
                        <div class="container-fluid text-center row justify-content-center"> 
                        {{!--Botón para editar usuario--}}    
                        <form action="/editOperator/{{id}}" method="get">
                            <button class="btn btn-info mr-1"> EDITAR
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 
                                        .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 
                                        .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 
                                        12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                </svg>
                            </button>
                        </form>

                        {{!--Botón para eliminar usuario--}}
                        <form action="/deleteOperator/{{id}}" onsubmit="return confirmation()" method="get">
                            <button class="btn btn-danger mr-1"> ELIMINAR
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 
                                        8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                            </button>
                        </form>
                        </div>
                    </td>
                </tr>
            </tbody>
        {{/each}}
    
    </table>
</div>