{{!-- hbs con la vista de editar usuario --}}
<script type="text/javascript">
    function confirmation(){
        if(confirm("¿Está seguro de actualizar los datos?")){
            return true;
        }else{
            return false;
        }
    }
</script>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header bg-info">
                    <h3 class="text-light">Editando Empleado: {{empleadoxd.nombre}}</h3>
                </div>
                <div class="card-body">
                    <img src="/img/logo_brissa_1.png" class="card-img-top mx-auto m-2 w-50"><br><br>{{!--<br> = endLine--}}
                    
                    <form action="" method="post" onsubmit="return confirmation()">

                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre" class="form-control" autofocus value={{empleadoxd.nombre}}>
                        </div>

                        <div class="form-group">
                            <input type="text" name="area" placeholder="Área" class="form-control" autofocus value={{empleadoxd.area}}>
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-danger btn-block">
                                GUARDAR CAMBIOS
                            </button>
                            <p class="mt-5 mb-4 text-muted">© 2022</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>